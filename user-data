#cloud-config
users:
  - name: hadoop
    gecos: Hadoop User
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    lock_passwd: false
    # 如果使用明文密码，也可以使用加密后的密码替换下面的值
    passwd: hadoop
    ssh-authorized-keys:
      - ssh-rsa  hadoop

ssh_pwauth: true
chpasswd:
  list: |
    hadoop:hadoop
  expire: false

runcmd:
  - echo 'AllowUsers hadoop' >> /etc/ssh/sshd_config
  - systemctl restart ssh